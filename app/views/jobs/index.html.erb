<div class="job-list">
  <div class="btn-group pull-right" role="group" aria-label="...">
      <%= link_to welcome_index_path, class: "btn btn-default" do %><i class="fa fa-home"></i><% end %>
      <%= link_to("Sort by Low Salary", jobs_path(:order => "by_lower_bound"), :class => "btn btn-default", :data => {:toggle => "button"}) %>
      <%= link_to("Sort by Up Salary", jobs_path(:order => "by_upper_bound"), :class => "btn btn-default") %>
      <%= link_to("Sort by Publish Time", jobs_path, :class => "btn btn-default") %>
   </div>
<div class="row">
<table class="table table-boldered table-striped custab" >
    <thead>

    <tr class="row-title">
      <th>Vacancy</th>
      <th>Company</th>
      <th>Apply</th>
      <th>Salary</th>
      <th>Location</th>
      <th>Exprience</th>
      <th>Education</th>
      <th>Publish Time</th>
    </tr>
    </thead>
    <tbody>

  <% @jobs.each do |job| %>
  <tr class="row-data">
    <td width="15%"><%= link_to(job.title, job_path(job), :target => "_blank") %></td>
    <td width="5%"><%= job.company %></td>
    <td class="apply-btn" width="5%">
      <%= link_to("see detail", job_path(job), :target => "_blank", :class => "btn btn-default") %>
      </td>
    <td width="15%">
      <span class="salary-info">
        <span class="fa fa-rmb"></span><%= job.wage_lower_bound %> - <%= job.wage_upper_bound%>
      </span>
    </td>
    <td width="5%"><%= job.working_city %></td>
    <td width="5%"><%= job.working_exprience %></td>
    <td width="5%"><%= job.educational_requirement %></td>
    <td width="20%"><%= local_time(job.created_at, '%B %e, %Y %l:%M%p') %></td>
  </tr>
  <% end %>
</tbody>
</table>
</div>

<div class="text-center">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>

</div>
